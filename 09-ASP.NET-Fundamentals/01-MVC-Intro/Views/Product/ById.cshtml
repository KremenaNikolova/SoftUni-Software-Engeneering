@using _01_MVC_Intro.Models.Product;
@model ProductViewModel

@{
    ViewBag.Title = $"Product with ID {Model.Id}";
}

<div class="card">
    <div class="card-header">@ViewBag.Title</div>
    <div class="card-body">
        <h5 class="card-title">Product Name: @Model.Name</h5>
        <p class="card-text">Price: @Model.Price</p>
    </div>
</div>
